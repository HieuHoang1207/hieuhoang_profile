<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Happy Valentine's Day</title>
    <style>
        body {
            background: url("img/sodaavatar.jpg") no-repeat center center/cover;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            width: 100vw;
            text-align: center;
            color: white;
            font-family: Arial, sans-serif;
            overflow: hidden;
        }
        h1 {
            font-size: 1.5rem;
            margin: 10px;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.8);
        }
        .video-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            width: 80%;
            max-width: 1000px;
        }
        video {
            width: 60%;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.5);
        }
    </style>
</head>
<body>
    <h1>Happy Valentine's Day, Soda ❤️</h1>
    <div class="video-container">
        <% const videos = ["soda1.mp4", "soda2.mp4", "soda3.mp4", "soda4.mp4", "soda5.mp4", "soda6.mp4"]; %>
        <% videos.forEach(video => { %>
            <video muted playsinline >
                <source src="/img/<%= video %>" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        <% }); %>
    </div>
    <audio id="background-music" loop>
        <source src="/img/sound.mp4" type="audio/mp4">
    </audio>
    <script>
        document.addEventListener("click", () => {
            document.querySelectorAll("video").forEach(video => {
                video.play();
            });
            const audio = document.getElementById("background-music");
            if (audio.paused) {
                audio.play();
            }
        });
    </script>
    
</body>
</html>
